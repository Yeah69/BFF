<Application x:Class="BFF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:forModels="clr-namespace:BFF.MVVM.ViewModels.ForModels"
             xmlns:helper="clr-namespace:BFF.Helper"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mvvm="clr-namespace:BFF.MVVM"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:viewModels="clr-namespace:BFF.MVVM.ViewModels"
             xmlns:views="clr-namespace:BFF.MVVM.Views"
             Startup="Application_Startup"
             mc:Ignorable="d">
    <!--  DispatcherUnhandledException="Application_DispatcherUnhandledException">  -->
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/Blue.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/BaseLight.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Colors.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/controls.buttons.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/controls.combobox.xaml" />
                <ResourceDictionary Source="MVVM/Resources/HamburgerMenu.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate x:Key="EmptyDataTemplate" />

            <DataTemplate x:Key="SimpleDataTemplate">
                <TextBlock Text="{Binding}" />
            </DataTemplate>

            <SolidColorBrush x:Key="TransactionBrush"
                             Color="DarkOrange" />
            <SolidColorBrush x:Key="IncomeBrush"
                             Color="LimeGreen" />
            <SolidColorBrush x:Key="TransferBrush"
                             Color="RoyalBlue" />
            <SolidColorBrush x:Key="NeutralBrush"
                             Color="DimGray" />

            <system:Double x:Key="IconSize">
                16.0
            </system:Double>
            <system:Double x:Key="TabHeaderIconSize">
                30.0
            </system:Double>
            <system:Double x:Key="WindowCommandIconSize">
                15.0
            </system:Double>
            <!--  Following Brushes are configured in code-behind  -->
            <SolidColorBrush x:Key="AlternatingRowBrush" />
            <SolidColorBrush x:Key="OpaqueZeroBrush" />

            <iconPacks:PackIconMaterialKind x:Key="AddIcon">
                PlusOne
            </iconPacks:PackIconMaterialKind>
            <iconPacks:PackIconMaterialKind x:Key="AccountIcon">
                CreditCard
            </iconPacks:PackIconMaterialKind>
            <iconPacks:PackIconMaterialKind x:Key="AllAccountsIcon">
                CreditCardMultiple
            </iconPacks:PackIconMaterialKind>
            <iconPacks:PackIconMaterialKind x:Key="SettingsIcon">
                Settings
            </iconPacks:PackIconMaterialKind>

            <Style x:Key="BffGeneralButtonStyle"
                   BasedOn="{StaticResource SquareButtonStyle}"
                   TargetType="{x:Type Button}">
                <Setter Property="controls:ControlsHelper.ContentCharacterCasing"
                        Value="Normal" />
            </Style>
            <Style BasedOn="{StaticResource BffGeneralButtonStyle}"
                   TargetType="{x:Type Button}" />

            <Style x:Key="CellTextBlock"
                   TargetType="TextBlock">
                <Setter Property="Padding"
                        Value="5,0,0,0" />
                <Setter Property="VerticalAlignment"
                        Value="Center" />
            </Style>

            <DataTemplate x:Key="SumEditTemplate"
                          DataType="{x:Type viewModels:ISumEditViewModel}">
                <DockPanel HorizontalAlignment="Stretch"
                           LastChildFill="True">
                    <ToggleButton MinWidth="20"
                                  Padding="5,0"
                                  Command="{Binding ToggleSign}"
                                  DockPanel.Dock="Left">
                        <ToggleButton.Style>
                            <Style BasedOn="{StaticResource {x:Type ToggleButton}}"
                                   TargetType="{x:Type ToggleButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SumSign}"
                                                 Value="{x:Static helper:Sign.Plus}">
                                        <Setter Property="Background"
                                                Value="{StaticResource IncomeBrush}" />
                                    </DataTrigger>
                                </Style.Triggers>
                                <Setter Property="Background"
                                        Value="{StaticResource TransactionBrush}" />
                            </Style>
                        </ToggleButton.Style>
                        <TextBlock Background="Transparent"
                                   FontWeight="Bold"
                                   Text="{Binding SumSign, Converter={x:Static mvvm:Converters.SignToString}}" />
                    </ToggleButton>
                    <TextBox HorizontalAlignment="Stretch"
                             VerticalContentAlignment="Center"
                             DockPanel.Dock="Right"
                             Foreground="{Binding Sum.Value, Converter={x:Static mvvm:Converters.SumToSolidColorBrush}}"
                             TextAlignment="Right">
                        <TextBox.Text>
                            <Binding Converter="{x:Static mvvm:Converters.SumToString}"
                                     Mode="TwoWay"
                                     Path="SumAbsolute"
                                     UpdateSourceTrigger="LostFocus">
                                <Binding.ValidationRules>
                                    <x:Static Member="mvvm:Rules.Currency" />
                                    <x:Static Member="mvvm:Rules.CurrencyLongRange" />
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                </DockPanel>
            </DataTemplate>

            <DataTemplate x:Key="IndentedCategoryItemTemplate">
                <StackPanel d:DataContext="{d:DesignInstance forModels:ICategoryViewModel}"
                            Orientation="Horizontal">
                    <Rectangle Width="4"
                               Height="16"
                               Margin="{Binding Depth, Converter={x:Static mvvm:Converters.CategoryDepthToMargin}}">
                        <Rectangle.Style>
                            <Style TargetType="{x:Type Rectangle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Converter={x:Static mvvm:Converters.OfType}, ConverterParameter={x:Type forModels:IncomeCategoryViewModel}}"
                                                 Value="True">
                                        <Setter Property="Fill"
                                                Value="{StaticResource IncomeBrush}" />
                                    </DataTrigger>
                                </Style.Triggers>
                                <Setter Property="Fill"
                                        Value="{DynamicResource AccentColorBrush}" />
                            </Style>
                        </Rectangle.Style>
                    </Rectangle>
                    <TextBlock Text="{Binding Name}" />
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="IndentedCategoryEditingItemTemplate">
                <StackPanel d:DataContext="{d:DesignInstance forModels:ICategoryViewModel}"
                            Orientation="Horizontal">
                    <Rectangle Width="4"
                               Height="16"
                               Margin="{Binding Depth, Converter={x:Static mvvm:Converters.CategoryDepthToMargin}}">
                        <Rectangle.Style>
                            <Style TargetType="{x:Type Rectangle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Converter={x:Static mvvm:Converters.OfType}, ConverterParameter={x:Type forModels:IncomeCategoryViewModel}}"
                                                 Value="True">
                                        <Setter Property="Fill"
                                                Value="{StaticResource IncomeBrush}" />
                                    </DataTrigger>
                                </Style.Triggers>
                                <Setter Property="Fill"
                                        Value="{DynamicResource AccentColorBrush}" />
                            </Style>
                        </Rectangle.Style>
                    </Rectangle>
                    <TextBox Text="{Binding Name}" />
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="CategoryItemTemplate">
                <StackPanel d:DataContext="{d:DesignInstance forModels:ICategoryViewModel}"
                            Orientation="Horizontal">
                    <Rectangle Width="4"
                               Height="16"
                               Margin="0,0,5,0">
                        <Rectangle.Style>
                            <Style TargetType="{x:Type Rectangle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Converter={x:Static mvvm:Converters.OfType}, ConverterParameter={x:Type forModels:IncomeCategoryViewModel}}"
                                                 Value="True">
                                        <Setter Property="Fill"
                                                Value="{StaticResource IncomeBrush}" />
                                    </DataTrigger>
                                </Style.Triggers>
                                <Setter Property="Fill"
                                        Value="{DynamicResource AccentColorBrush}" />
                            </Style>
                        </Rectangle.Style>
                    </Rectangle>
                    <TextBlock Margin="0,0,5,0"
                               Text="{Binding Name}" />
                </StackPanel>
            </DataTemplate>

            <Style x:Key="CellIconMaterial"
                   TargetType="iconPacks:PackIconMaterial">
                <Setter Property="VerticalAlignment"
                        Value="Center" />
                <Setter Property="Height"
                        Value="{StaticResource IconSize}" />
                <Setter Property="Width"
                        Value="{StaticResource IconSize}" />
            </Style>

            <iconPacks:PackIconMaterialKind x:Key="TransactionIcon">
                Logout
            </iconPacks:PackIconMaterialKind>
            <iconPacks:PackIconMaterialKind x:Key="IncomeIcon">
                Login
            </iconPacks:PackIconMaterialKind>
            <iconPacks:PackIconMaterialKind x:Key="TransferIcon">
                ShuffleVariant
            </iconPacks:PackIconMaterialKind>
            <iconPacks:PackIconMaterialKind x:Key="PlaceholderIcon">
                ClockFast
            </iconPacks:PackIconMaterialKind>
            <iconPacks:PackIconMaterialKind x:Key="ParentIcon">
                Sitemap
            </iconPacks:PackIconMaterialKind>
            <iconPacks:PackIconMaterialKind x:Key="AddToTableIcon">
                TableRowPlusAfter
            </iconPacks:PackIconMaterialKind>
            <iconPacks:PackIconMaterialKind x:Key="RemoveFromTableIcon">
                TableRowRemove
            </iconPacks:PackIconMaterialKind>
            <iconPacks:PackIconOcticonsKind x:Key="RemoveNotInsertedIcon">
                X
            </iconPacks:PackIconOcticonsKind>
            <iconPacks:PackIconMaterialKind x:Key="FlagIcon">
                Bookmark
            </iconPacks:PackIconMaterialKind>

            <DataTemplate x:Key="FlagTemplate">
                <iconPacks:PackIconMaterial x:Name="PopHereUp"
                                            d:DataContext="{d:DesignInstance forModels:IFlagViewModel}"
                                            Foreground="{Binding Color}"
                                            Kind="{StaticResource FlagIcon}"
                                            Style="{StaticResource CellIconMaterial}" />
            </DataTemplate>

            <DataTemplate x:Key="FlagEditTemplate">
                <Grid d:DataContext="{d:DesignInstance forModels:IFlagViewModel}">
                    <Popup x:Name="Popup"
                           StaysOpen="False">
                        <views:ColorPickerView Brush="{Binding Color, Mode=TwoWay}" />
                    </Popup>

                    <Button Click="Flag_OnClick">
                        <Button.Template>
                            <ControlTemplate>
                                <iconPacks:PackIconMaterial x:Name="PopHereUp"
                                                            Foreground="{Binding Color}"
                                                            Kind="{StaticResource FlagIcon}"
                                                            Style="{StaticResource CellIconMaterial}" />
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>